{  
   "template":"*",
   "mappings":{  
      "_default_":{  
         "_all":{  
            "analyzer":"french"
         }
      }
   },
   "settings":{
      "analysis":{
         "filter":{
            "my_word_delimiter":{
               "type":"word_delimiter",
               "stem_english_possessive":false,
               "preserve_original":true,
               "catenate_all":true
            },
            "my_french_stop":{
               "type":"stop",
               "stopwords":"_french_"
            },
            "my_french_elision":{
               "type":"elision",
               "articles":[
                  "l",
                  "m",
                  "t",
                  "qu",
                  "n",
                  "s",
                  "j",
                  "d",
                  "c",
                  "jusqu",
                  "quoiqu",
                  "lorsqu",
                  "puisqu"
               ]
            },
            "my_french_stemmer":{
               "type":"stemmer",
               "name":"light_french"
            },
            "my_unique":{
               "type":"unique",
               "only_on_same_position":"true"
            }
         },
         "char_filter":{
            "my_char_filter":{
               "type":"mapping",
               "mappings":[
                  ":) => .heureux.",
                  ":( => .triste."
               ]
            }
         },
         "analyzer":{
            "french_max":{
               "tokenizer":"standard",
               "filter":[
                  "lowercase",
                  "my_french_elision",
                  "asciifolding",
                  "my_word_delimiter",
                  "my_french_stop",
                  "my_french_stemmer",
                  "my_unique"
               ],
               "char_filter":[
                  "html_strip",
                  "my_char_filter"
               ]
            }
         }
      }
   }
}